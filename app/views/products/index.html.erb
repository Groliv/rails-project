<p id="notice"><%= notice %></p>

<h2>Listing Products</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Seller</th>
      <th>Description</th
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.user.firstname %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price, precision: 2) %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product, :class=>"btn btn-default btn-xs" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-default btn-xs" %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Product', new_product_path, :class=>"btn btn-success btn-md" %>
<% end -%>