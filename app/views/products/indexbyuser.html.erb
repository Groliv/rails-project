<p id="notice"><%= notice %></p>


<% if @products.current_user.exists? %>
<h2>Listing Products</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product, :class=>"btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<?php else: ?>
  You don't have products registered
<% end -%>

<%= link_to 'New Product', new_product_path, :class=>"btn btn-success btn-md" %>
